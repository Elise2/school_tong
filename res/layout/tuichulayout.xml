<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center_vertical" >
         <ImageView
            android:id="@+id/pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cc_default_head" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/pic"
            android:maxLines="1"
            android:text="你好" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pic"
            android:text="welcome" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/cc_arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="密码修改"
            android:textSize="18sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/text3"
            android:background="#ccc" />

        <TextView
            android:id="@+id/storeInfo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/view1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="个人收藏"
            android:textSize="18sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/storeInfo"
            android:background="#ccc" />

        <RelativeLayout
            android:id="@+id/versionContain"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/view2" >

            <TextView
                android:id="@+id/updateversion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="版本检测"
                android:textSize="18sp" />

            <TextView
                android:id = "@+id/versionCode"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
               	android:gravity="center_vertical"
                android:text="1.0"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/versionContain"
            android:background="#ccc" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/view3"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="自动登录"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_below="@id/versionContain"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_switch_on" />
    </RelativeLayout>

    <Button
        android:id="@+id/queit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tuichu"
        android:text="退出"
        android:textColor="#ffffff" />

</LinearLayout>